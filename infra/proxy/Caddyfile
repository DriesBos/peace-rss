:80 {

  # Canonicalize /miniflux -> /miniflux/
  @minifluxNoSlash path /miniflux
  redir @minifluxNoSlash /miniflux/ 308

  # Miniflux under /miniflux (DO NOT strip prefix)
  handle /miniflux/* {
    reverse_proxy miniflux:8080
  }

  # Everything else to Next.js
  handle {
    reverse_proxy frontend:3000
  }
}
